<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    android:backgroundTint="?attr/colorWhite"
    android:elevation="4dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- LEFT VIOLET STRIP -->
        <View
            android:id="@+id/colorStrip"
            android:layout_width="8dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:background="?attr/colorViolet" />


        <!-- RIGHT SIDE (PRICE + EDIT + DELETE) -->
        <LinearLayout
            android:id="@+id/rightContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:orientation="vertical">

            <!-- PRICE TAG -->
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_price_pill"
                android:paddingStart="14dp"
                android:paddingTop="6dp"
                android:paddingEnd="14dp"
                android:paddingBottom="6dp"
                android:text="â‚¹1200"
                android:textColor="?attr/colorWhite"
                android:textSize="13sp"
                android:textStyle="bold" />

            <!-- EDIT + DELETE ICONS -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnEdit"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_edit"
                    app:tint="?attr/colorDarkBlue" />

                <ImageView
                    android:id="@+id/btnDelete"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_delete"
                    app:tint="?attr/colorRed" />

            </LinearLayout>
        </LinearLayout>

        <!-- MAIN CONTENT (DESCRIPTION + DATE) -->
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toStartOf="@id/rightContainer"
            android:layout_toEndOf="@id/colorStrip"
            android:orientation="vertical">

            <!-- Description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="New Bag in Flipkart"
                android:textColor="?attr/colorDarkBlue"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Date Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="?attr/colorDarkBlue" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="01 Jan 25"
                    android:textColor="?attr/colorDarkBlue"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
